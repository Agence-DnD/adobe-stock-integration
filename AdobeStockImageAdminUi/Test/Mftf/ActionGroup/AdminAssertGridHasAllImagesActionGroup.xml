<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssertGridHasAllImagesActionGroup">
        <arguments>
            <argument name="count" type="string" defaultValue="32"/>
        </arguments>
        <grabMultiple selector="{{AdobeStockSection.countGridImages}}" stepKey="grabShowedImages" />
        <executeInSelenium function="function(\Facebook\WebDriver\Remote\RemoteWebDriver $webdriver) use ($I) {
		    $I->assertEquals({{count}}, count($I->grabMultiple('//div[@class=\'masonry-image-grid\']/div[contains(.,data-repeat-index)]')), 'Images in grid should be equal count 33');}" stepKey="executeInSelenium"/>
    </actionGroup>
</actionGroups>