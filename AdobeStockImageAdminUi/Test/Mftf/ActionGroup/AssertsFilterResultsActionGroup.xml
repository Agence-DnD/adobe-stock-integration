<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertsFilterResultsActionGroup">
        <arguments>
            <argument name="resultValue" type="string"/>
        </arguments>
        <click selector="{{AdobeStockFilterSection.filters}}" stepKey="expandFiltersToCheckAppliedColor"/>
        <see selector="{{AdobeStockFilterSection.colorActiveFilter}}" userInput="{{resultValue}}" stepKey="verifyAppliedColor"/>
    </actionGroup>
</actionGroups>