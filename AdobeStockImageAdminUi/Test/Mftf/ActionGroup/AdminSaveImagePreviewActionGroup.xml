<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSaveImagePreviewActionGroup">
        <grabAttributeFrom selector="{{AdobeStockSection.imagePreview}}" userInput="src" stepKey="getUrlImageFromCmsPage"/>
        <click selector="{{AdobeStockSection.savePreview}}" stepKey="clickOnSavePreview"/>
        <grabAttributeFrom selector="{{AdobeStockSection.categoryPreviewImage}}" userInput="src"
                           stepKey="getPreviewImage"/>
        <assertEquals expected="$getUrlImageFromCmsPage" expectedType="string" actual="$getPreviewImage" stepKey="assertImageInPreview"/>
    </actionGroup>
</actionGroups>