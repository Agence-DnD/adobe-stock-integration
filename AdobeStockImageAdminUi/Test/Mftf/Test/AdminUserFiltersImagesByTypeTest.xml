<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminUserFiltersImagesByTypeTest" extends="AdminUserFiltersImagesByOrientationTest">
        <annotations>
            <stories value="Cover scenario: User filters images by type"/>
            <title value="Admin should be able to filters images by type"/>
            <description value="Admin should be able to filters images by type"/>
            <severity value="CRITICAL"/>
            <group value="AdobeStockIntegration"/>
        </annotations>
        <remove keyForRemoval="checkOrientationFilter"/>
        <actionGroup ref="AssertIsVisibleAdobeStockFilterElementActionGroup" stepKey="checkPriceFilter" after="waitForFiltersOpen">
            <argument name="filterName" value="Subcategory"/>
        </actionGroup>
        <remove keyForRemoval="setOrientationFilterToHorizontal"/>
        <actionGroup ref="AdminFilterByOrientationActionGroup" stepKey="setPriceFilterToPremium" after="checkPriceFilter">
            <argument name="type" value="Photo"/>
            <argument name="filter" value="{{AdobeStockFilterSection.filterByType}}"/>
            <argument name="filterOption" value="content_type_filter"/>
        </actionGroup>
        <remove keyForRemoval="verifyAppliedFilter"/>
        <actionGroup ref="AssertsFilterResultsActionGroup" stepKey="verifyAppliedFilter" after="assertImagesUpdated">
            <argument name="resultValue" value="Photo"/>
        </actionGroup>
    </test>
</tests>
