<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="UserAccessesAdobeStockPanelTest">
        <annotations>
            <features value="AdobeStockImagePanel"/>
            <stories value="Access Adobe Stock Image panel via the Admin"/>
            <title value="Admin should be able to access Adobe Stock Image panel"/>
            <description value="Admin should be able to access Adobe Stock Image panel"/>
            <severity value="CRITICAL"/>
            <group value="AdobeStockIntegration"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>

            <!-- Enable adobe stock -->
            <actionGroup ref="AdminAdobeStockGoToConfigurationPageActionGroup" stepKey="goToAdobeStockConfigurationPage"/>
            <actionGroup ref="AdminAdobeStockFillConfigurationActionGroup" stepKey="fillConfigurationFields"/>
            <actionGroup ref="AdminSaveConfigActionGroup" stepKey="saveConfiguration"/>
        </before>
        <after>
            <!-- Disable adobe stock -->
            <actionGroup ref="AdminAdobeStockGoToConfigurationPageActionGroup" stepKey="goToAdobeStockConfigurationPage"/>
            <actionGroup ref="AdminAdobeStockFillConfigurationActionGroup" stepKey="fillConfigurationFields">
                <!-- Empty not allowed by validation rules -->
                <argument name="apiKey" value="WRONG"/>
                <argument name="privateKey" value="WRONG"/>
            </actionGroup>
            <actionGroup ref="AdminSaveConfigActionGroup" stepKey="saveConfiguration"/>

            <actionGroup ref="logout" stepKey="logout"/>
        </after>
        <actionGroup ref="AdminOpenAdobeStockSearchModalActionGroup" stepKey="openModal"/>

        <see selector="{{AdobeStockSection.modal}} {{AdobeStockSection.panelTitle}}" userInput="{{AdobeStockModalData.title}}" stepKey="seeAdobeStockPanelTitle" />
        <seeElement selector="{{AdobeStockSection.modal}} {{AdobeStockSection.searchInput}}" stepKey="seeAdobeStockSearchInput" />
        <seeNumberOfElements selector="{{AdobeStockSection.modal}} {{AdobeStockSection.imagesThumbnails}}" userInput="32" stepKey="see32images"/>
        <seeInField selector="{{AdminDataGridPaginationSection.currentPage}}" userInput="1" stepKey="checkCurrentPage" />
        <click selector="{{AdminDataGridPaginationSection.nextPage}}" stepKey="clickNextPage" />
        <seeNumberOfElements selector="{{AdobeStockSection.modal}} {{AdobeStockSection.imagesThumbnails}}" userInput="32" stepKey="see32imagesOnTheSecondPage"/>
        <seeInField selector="{{AdminDataGridPaginationSection.currentPage}}" userInput="2" stepKey="checkSecondPage" />
        <click selector="{{AdobeStockSection.modal}}{{AdminSlideOutDialogSection.closeButton}}" stepKey="closeAdobeStockPanel" />
    </test>
</tests>
