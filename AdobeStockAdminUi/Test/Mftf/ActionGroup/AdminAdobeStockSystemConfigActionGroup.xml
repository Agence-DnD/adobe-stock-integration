<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAdobeStockSystemConfigActionGroup">
        <amOnPage url="{{AdminConfigSystemPage.url}}" stepKey="navigateToSystemConfigurationPage" />
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <scrollTo selector="{{AdminConfigSystemSection.adobeStockIntegration}}" stepKey="scrollToAdobeStockIntegrationSection"/>
        <conditionalClick stepKey="expandadobeStockIntegrationTab" selector="{{AdminConfigSystemSection.adobeStockIntegration}}" dependentSelector="{{AdminConfigSystemSection.CheckIfTabExpand}}" visible="true" />
        <seeElement selector="{{AdminConfigSystemSection.expandedTab}}" stepKey="seeSectionExpanded"/>
    </actionGroup>
</actionGroups>