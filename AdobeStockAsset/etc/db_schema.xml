<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="adobe_stock_request" resource="default" engine="innodb" comment="Adobe Stock License Request">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="admin_user_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Admin User Id"/>
        <column xsi:type="text" name="request_id" nullable="false" comment="Request ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ADO_STO_LIC_REQ_ADM_USER_ID" table="adobe_stock_license_request" column="admin_user_id" referenceTable="admin_user" referenceColumn="user_id" onDelete="CASCADE"/>
    </table>
    <table name="adobe_stock_user_profile" resource="default" engine="innodb" comment="Adobe Stock User Profile">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe Id"/>
        <column xsi:type="int" name="admin_user_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Admin User Id"/>
        <column xsi:type="text" name="display_name" nullable="false" comment="Display Name"/>
        <column xsi:type="text" name="preferred_languages" nullable="false" comment="Preferred Languages"/>
        <column xsi:type="text" name="account_type" nullable="true" comment="Account Type"/>
        <column xsi:type="text" name="access_token" nullable="true" comment="Access Token"/>
        <column xsi:type="text" name="refresh_token" nullable="true" comment="Refresh Token"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ADO_STO_USR_PRO_ADM_USER_ID" table="adobe_stock_user_profile" column="admin_user_id" referenceTable="admin_user" referenceColumn="user_id" onDelete="CASCADE"/>
    </table>
    <table name="adobe_stock_asset" resource="default" engine="innodb" comment="Adobe Stock Asset">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="media_type_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Media Type ID"/>
        <column xsi:type="int" name="category_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Category ID"/>
        <column xsi:type="int" name="creator_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Creator ID"/>
        <column xsi:type="int" name="premium_level_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Premium Level ID"/>
        <column xsi:type="int" name="path" padding="10" unsigned="true" nullable="false" identity="false" comment="Path"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe Id"/>
        <column xsi:type="text" name="stock_id" nullable="true" comment="Stock Id"/>
        <column xsi:type="int" name="is_licensed" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Is Licensed"/>
        <column xsi:type="text" name="title" nullable="true" comment="Title"/>
        <column xsi:type="text" name="preview_url" nullable="true" comment="Preview Url"/>
        <column xsi:type="int" name="preview_width" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Preview With"/>
        <column xsi:type="int" name="preview_height" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Preview Height"/>
        <column xsi:type="int" name="width" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Width"/>
        <column xsi:type="int" name="height" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Height"/>
        <column xsi:type="int" name="url" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Url"/>
        <column xsi:type="text" name="country_name" nullable="true" comment="Country Name"/>
        <column xsi:type="text" name="details_url" nullable="true" comment="Details Url"/>
        <column xsi:type="text" name="vector_type" nullable="true" comment="Vector Type"/>
        <column xsi:type="text" name="content_type" nullable="true" comment="Content Type"/>
        <column xsi:type="text" name="creation_date" nullable="true" comment="Creation Date"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="adobe_stock_category" resource="default" engine="innodb" comment="Adobe Stock Category">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe Id"/>
        <column xsi:type="text" name="name" nullable="true" comment="Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="adobe_stock_asset_keyword" resource="default" engine="innodb" comment="Adobe Stock Asset Keyword">
        <column xsi:type="int" name="asset_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Asset ID"/>
        <column xsi:type="int" name="keyword_id" padding="10" unsigned="true" nullable="true" identity="false" comment="Keyword Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="asset_id"/>
        </constraint>
    </table>
    <table name="adobe_stock_keyword" resource="default" engine="innodb" comment="Adobe Stock Keyword">
        <column xsi:type="int" name="asset_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Stock ID"/>
        <column xsi:type="text" name="keyword" nullable="true" comment="Keyword"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="asset_id"/>
        </constraint>
    </table>
    <table name="adobe_stock_creator" resource="default" engine="innodb" comment="Adobe Stock Creator">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe Id"/>
        <column xsi:type="text" name="creator_name" nullable="true" comment="Asset creator's name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="adobe_stock_media_type" resource="default" engine="innodb" comment="Adobe Stock Creator">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Primary key"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe Assets Type"/>
        <column xsi:type="text" name="name" nullable="true" comment="Assets Type Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="adobe_stock_premium_level" resource="default" engine="innodb" comment="Adobe Stock Premium Level">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Primary key"/>
        <column xsi:type="int" name="adobe_id" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="Adobe ID"/>
        <column xsi:type="text" name="name" nullable="true" comment="Premium Level Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
